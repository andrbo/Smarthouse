<script  src="/scripts/bootstrap-slider/dist/bootstrap-slider.min.js"></script>

{{> menubar-items}}


<div class="container">
    <div class="row">
        <div class="col-md-12 col-xs-12 text-center no-padding">
            {{#if success_msg}}
                <div class="alert alert-success alert-dismissable">{{success_msg}}
                <button class="close" data-dismiss="alert">
                    <span aria-hidden="true">x</span>
                </button>
                </div>
            {{/if}}

            {{#if error_msg}}
                <div class="alert alert-danger alert-dismissable">{{error_msg}}
                    <button class="close" data-dismiss="alert">
                        <span aria-hidden="true">x</span>
                    </button>
                </div>
            {{/if}}

            {{#if error}}
                <div class="alert alert-danger alert-dismissable">{{error}}
                    <button class="close" data-dismiss="alert">
                        <span aria-hidden="true">x</span>
                    </button>
                </div>
            {{/if}}

            {{{ body }}}
        </div>
    </div>
</div>
