<link rel='stylesheet' href='External Libraries/calendar/fullcalendar/dist/fullcalendar.css'/>
<script src='/External Libraries/calendar/moment/min/moment.min.js'></script>
<script src='/External Libraries/calendar/fullcalendar/dist/fullcalendar.js'></script>

<script src='/External Libraries/calendar/fullcalendar/dist/locale/nb.js'></script>
<script src='/External Libraries/calendar/fullcalendar/dist/locale/en-au.js'></script>

