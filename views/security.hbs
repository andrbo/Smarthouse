            </div>
            <div class="col-md-8">
                <h3 id="vibeValue"></h3>
            </div>
        </div>

    </div>

    <div class="col-md-6">
        <img src="" id="webCam">
    </div>

</div>
<div class="container">
    <div class = col-md-12>
    <div class="row">
        <div class="col-md-3">
            <button  type="button" id="alarmBtn" class="btn btn-primary" data-toggle="modal" data-target="#alarmPw">
                Aktiver alarm
            </button>
            <div class="modal fade" id="alarmPw">
                <div class="model-dialog">
                    <div class="model-content">
                        <div class="model-header">
                            <h4><span class="glyphicon glyphicon-lock"></span> Aktiver alarm</h4>
                        </div>
                        <div class="modal-body">
                            <p> Skriv inn passord for å aktivere alarmen</p>
                            <input id="pw" type="password" placeholder="*******" style="color: #0f0f0f">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Avbryt</button>
                            <button type="button" id="btnActivateAlarm" class="btn btn-save">Aktiver</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    </div>
</div>
<script>
    $('#btnActivateAlarm').click(function () {
        var pwInput = $('#pw').val();
        $('#alarmPw').modal('hide');
        $('body').removeClass('modal-open');
        $('.modal-backdrop').remove();
        console.log(pwInput);
        // bytt ut med sjekk av kryptert passord lagret i database
        if (pwInput == 1234) {
            console.log("passord korrekt kjør funksjon");
            alarmaktivert();
        }
    })

    function alarmaktivert() {
        console.log("alarmen er aktivert ")
        $('#alarmBtn').innerHTML = "Deaktiver alarm";
        $('#alarmBtn').removeClass('btn-primary').addClass('btn-danger').text('Deaktiver alarm');
        socket.emit('alarmActivated');
    }
</script>


