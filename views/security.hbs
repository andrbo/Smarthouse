<!-- include bootstrap, jquery for easy div manipulation -->
<link rel="stylesheet" href="/css/font-awesome.min.css">
<link rel="stylesheet" href="/css/security.css">

<div class="container" id="sensordata">

    <div class="col-md-6">

        <div class="row" id="flameSensor">
            <div class="col-md-4">
                <span class="glyphicon glyphicon-fire" aria-hidden="true"></span>
                <h6>{{__ "Flame-Sensor"}}</h6>
            </div>
            <div class="col-md-8">
                <h3 id="flameValue"></h3>
            </div>
        </div>

        <div class="row" id="gasSensor">
            <div class="col-md-4">
                <span class="glyphicon glyphicon-cloud " aria-hidden="true"></span><span
                    class="glyphicon glyphicon-warning-sign " aria-hidden="true"></span>
                <h6>{{__ "Gas-Sensor"}}</h6>
            </div>
            <div class="col-md-8">
                <h3 id="gasValue"></h3>
            </div>
        </div>

        <div class="row" id="leakSensor">
            <div class="col-md-4">
                <span class="glyphicon glyphicon-tint" aria-hidden="true"></span>
                <h6>{{__ "Leak-Sensor"}}</h6>
            </div>
            <div class="col-md-8">
                <h3 id="leakValue"></h3>
            </div>
        </div>

        <div class="row" id="laserSensor">
            <div class="col-md-4">
                <span class="glyphicon glyphicon-minus"></span><span class="glyphicon glyphicon-asterisk" aria-hidden="true"></span>
                <h6>{{__ "Laser-Trip"}}</h6>
            </div>
            <div class="col-md-8">
                <h3 id="laserValue"></h3>
            </div>
        </div>

        <div class="row" id="IRbarrier">
            <div class="col-md-4">
                <span class="glyphicon glyphicon-transfer" aria-hidden="true"></span>
                <h6>{{__ "IR-Barrier"}}</h6>
            </div>
            <div class="col-md-8">
                <h3 id="irValue"></h3>
            </div>
        </div>

        <div class="row" id="vibeSensor">
            <div class="col-md-4">
                <span class="glyphicon glyphicon-equalizer" aria-hidden="true"></span>
                <h6>{{__ "Vibe-Sensor"}}</h6>
            </div>
            <div class="col-md-8">
                <h3 id="vibeValue"></h3>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <img src="" id="webCam">
    </div>
</div>
<div class="container">
    <div class=col-md-12>
        <div class="row">
            <div class="col-md-3">
                <h3>Alarm:</h3>
                <button id="toggle" type="button" onclick="alarmToggle()">{{__ "Act-Alarmbtn"}}</button>
                <div class="modal fade" id="activateAlarmPw">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4><span class="glyphicon glyphicon-lock"></span>{{__ "Act-Alarm"}}</h4>
                            </div>
                            <div class="modal-body">
                                <p>{{__ "ActAlarm-Pw"}}</p>
                                <input id="pwAct" type="password" placeholder="*******" style="color: #0f0f0f">
                                <div class="alert alert-error" id="pwErrorAct">
                                    <span>
                                         <p class="pwError">{{__ "Alarm-PwErr"}}</p>
                                    </span>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" id="btnCancelAcAlarm" class="btn btn-default">{{__ "Cancel-ActAlarm"}}</button>
                                <button type="button" id="btnActivateAlarm" class="btn btn-save">{{__ "Activate-ActAlarm"}}</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="deactivateAlarmPw">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4><i class="fa fa-key" style="font-size:50px;"></i></span>{{__ "Deac-Alarm"}}</h4>
                            </div>
                            <div class="modal-body">
                                <p>{{__ "DeacAlarm-Pw"}}</p>
                                <input id="pwDeac" type="password" placeholder="*******" style="color: #0f0f0f">
                                <div class="alert alert-error" id="pwErrorDeac">
                                     <span>
                                            <p class="pwError">{{__ "Alarm-PwErr"}}</p>
                                     </span>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" id="btnCancelDeacAlarm" class="btn btn-default">{{__ "Cancel-DeacAlarm"}}</button>
                                <button type="button" id="btnDeactivateAlarm" class="btn btn-save">{{__ "Activate-DeacAlarm"}}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/securityScript.js"></script>

