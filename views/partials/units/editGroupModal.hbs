<!-- Edit group modal -->
<div class=" modal fade" id="editGroupModal">
    <div class=" modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3><span class="glyphicon glyphicon-cog"></span>{{__ "Light-EditGroup"}}</h3>
            </div>
            <div class="modal-body">
                <h4>{{__ "Light-AddNewGroup"}}:</h4>
                <hr>
                <div class=form-group row>
                    <div class = "col-md-8">
                        <input id="editGroupNewGroupInput" type="text" class="form-control">
                    </div>
                    <div class = "col-md-2 pull-right" >
                        <button id = "editGroupSaveNew" type="button" class="btn btn-success">{{__ "Light-Save"}}</button>
                    </div>
                </div>
                <div class=" form-group row" style="display: none">
                    <div class="col-md-12">
                        <p id="addGroupSucess" style="color: green"></p>
                    </div>
                    <div class = "col-md-12">
                        <p id="addGroupFail" style="color: red"></p>
                    </div>
                </div>
                <br>
                <br>
                <h4>{{__ "Light-DeleteGroup"}}?</h4>
                <table id="editGroupTable" class="display" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th>{{__ 'Light-Group'}}</th>
                        <th></th>
                    </tr>
                    </thead>
                </table>
            </div>

            <div class="modal-footer">
                <button type="button" id="cancelEditGroup" class="btn btn-default" data-dismiss="modal">{{__
                        "Light-Cancel"}}</button>
            </div>
        </div>
    </div>
</div>

<div id="deleteGroupButton" hidden>{{__ "Delete"}}</div>