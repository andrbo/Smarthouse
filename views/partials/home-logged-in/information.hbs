<div class="col-md-12 col-xs-12">
    <div id="sensorInfoPanel" class="panel col-md-3 col-xs-12">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Sensor</th>
                <th>Verdi</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{__ "Home-TempInside"}}</td><td></td>
            </tr>
            <tr>
                <td id="temp">{{__ "Home-Temp"}}</td>
                <td id="tempValue">No value</td>
            </tr>
            <tr>
                <td id="hum">{{__ "Home-Hum"}}</td>
                <td id="humValue">No value</td>
            </tr>
            <tr>
            <td>{{__ "Home-TempOutside"}}</td><td></td>
            </tr>
