<div class="col-md-12 col-xs-12">
    <div id="sensorInfoPanel" class="panel col-md-3 col-xs-12">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Sensor</th>
                <th>Verdi</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{__ "Home-TempInside"}}</td><td></td>
            </tr>
            <tr>
                <td id="temp">{{__ "Home-Temp"}}</td>
                <td id="tempValue">No value</td>
            </tr>
            <tr>
                <td id="hum">{{__ "Home-Hum"}}</td>
                <td id="humValue">No value</td>
            </tr>
            <tr>
            <td>{{__ "Home-TempOutside"}}</td><td></td>
            </tr>
            <tr>
                <td>{{__ "Home-Temp"}}</td>
                <td id="tempOut1">No value</td>
            </tr>
            <tr>
                <td>{{__ "Home-Temp"}}</td>
                <td id="tempOut2">No value</td>
            </tr>
            </tbody>
        </table>
    </div>

    <div id="sensorAlerts" class="panel col-md-3 col-xs-12 ">
        <h3 id="status" align="center">Sensorstatus</h3>
        <hr>
        <p id="sensorWarningGlyphicon" class="glyphicon glyphicon-ok"></p>
        <table id="sensorWarningsTable" class="table">
            <tbody></tbody>
        </table>
        <h3 id="noWarningsHeader">All good!</h3>
    </div>
    <div id="shoppingList" class="panel col-md-3 col-xs-12">
        <table id="shoppingListTable" class="table" cellspacing="0" width="100%"></table>
        <button id="openAddProductModalButton" type="button" class="btn btn-primary btn-md pull-left" data-dismiss="modal">Legg til vare</button>
    </div>
</div>


<div id="addProductModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add product</h4>
            </div>
            <div class="itemsList modal-body form-group">
                <!--<input type="text" class="productInput form-control" placeholder="Vare">-->
            </div>

            <div class="modal-footer">
                <button id="addNewItemButton" class="btn btn-primary pull-left"><span class="glyphicon glyphicon-plus"></span> Ny vare</button>
                <button id="addProductButton" type="button" class="btn btn-success" data-dismiss="modal"> Legg til produkter</button>
            </div>
        </div>
    </div>
</div>

<div id="showDescriptionModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Description</h4>
            </div>
            <div class="modal-body">
                <div id="eventDescription" class="form-group"></div>
            </div>

            <div class="modal-body"> Deltakere:
                <div id="eventParticipants" class="form-group"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>

<div id="eventList" class="panel col-md-12 col-xs-12">
    <table id="calendarEventList" class="table table-striped table-bordered col-xs-6" cellspacing="0" width="100%"></table>
</div>

