                <li><a href="#controlGroupTab" id="controlGroup" data-toggle="tab">{{__ "Light-ControlGroup"}}</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="controlUnitTab">
                    <table id="unitTable" class="display" cellspacing="0" width="100%">
