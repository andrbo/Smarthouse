                        </thead>
                        <tfoot>
                        <tr>
                            <th>{{__ 'Light-UnitNo'}}</th>
                            <th>{{__ 'Light-Description'}}</th>
                            <th>{{__ 'Light-State'}}</th>
                            <th>{{__ 'Light-Group'}}</th>
                            <th style="display: none">LuxState</th>
                            <th style="display: none">luxValue</th>
                            <th>{{__ 'Light-Toggle'}}</th>
                        </tr>
                        </tfoot>
                    </table>
                    <div class="row">
                        <div class="col-md-3">
                            <button class=" btn-primary" id="addDeviceBtn">{{__ 'Light-AddDevice'}}</button>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="controlGroupTab">
                    <h3>Control group</h3>
                    <br>
                    <br>
                    <div class=" container">
                        <table id="groupTable" class="display" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>{{__ "Light-Group"}}</th>
                                <th>{{__ "Light-State"}}</th>
                                <th>{{__ "Light-Toggle"}}</th>
                            </tr>
                            </thead>
                        </table>
                        <div class="col-md-3">
                            <button class="btn-primary" id="editGroupBtn">{{__ 'Light-EditGroup'}}</button>
                        </div>
                    </div>
                </div>
        </div>
